<view class="page">
  <view class="page_hd">
    <text class="page_title">audio音频</text>
  </view>
  <view class="page_bd">
    <view class="section section_gap" style="text-align: center;">
      <audio id="audio1" src="{{current.src}}" poster="{{current.poster}}" name="{{current.name}}" author="{{current.author}}" action="{{audioAction}}" controls>
      </audio>
    </view>
  </view>
    <view class="btn-area">
      <button type="primary" bindtap="audioPlay">播放</button>
      <button type="primary" bindtap="audioPause">暂停</button>
      <button type="primary" bindtap="audio20">设置当前播放时间20秒</button>
      <button type="primary" bindtap="audioStart">回到开头</button>
    </view>
</view>
